<Window x:Class="Caro_game.Views.WinDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStyle="None"
        Background="#FFFDEDE2"
        AllowsTransparency="True"
        Title="Kết thúc ván">
    <Border CornerRadius="12" BorderBrush="DarkOrange" BorderThickness="2" Padding="20" Background="White">
        <StackPanel>
            <!-- Thông báo -->
            <TextBlock x:Name="MessageText" 
                       Text="Người chơi X thắng!"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="DarkOrange"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,15"/>

            <!-- Các nút -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="BtnPlayAgain" Content="Chơi lại" Width="80" Margin="0,0,10,0" Padding="5"/>
                <Button x:Name="BtnExit" Content="Thoát" Width="80" Padding="5"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
